<div class="well-sm">
    <div class="form-horizontal">
        <h3>Welcome, @User.Identity.Name!</h3>
        <div>
            <p>If you'r selected a winner, this screen will notify you. So sit tight and wait as we give away awesome prizes!</p>
            <div id="winnerNotify"></div>
        </div>
    </div>
</div>

@section scripts {
    <script type="text/javascript" src="@Url.Content("~/scripts/jquery.signalR-2.0.2.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/signalr/hubs")"></script>

    <script type="text/javascript">
        $(function () {
            var notify = $.connection.notifyHub;

            notify.client.notifyWinner = function (outcome) {
                $('#winnerNotify').html('<h2><strong>' + outcome + '</strong></h2>');
            };

            $.connection.hub.start();
        });
    </script>
}
